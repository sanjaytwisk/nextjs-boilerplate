{
  "name": "nextjs-boilerplate",
  "version": "1.0.0",
  "description": "NextJS boilerplate with TypeScript and Redux",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "test:dev": "NODE_ENV=test jest --watchAll",
    "start": "NODE_ENV=production PORT=$PORT node ./server/index.js",
    "build": "rm -rf .next && next build",
    "dev": "nodemon server/index.js",
    "export": "npm run build && next export",
    "prettier": "prettier --write **/*.{js,jsx}",
    "lint:js": "npm run prettier && eslint --fix --ext .jsx --ext .js src pages server",
    "lint:scss": "stylelint --fix {src,pages}/**/*.scss",
    "storybook": "start-storybook"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test",
      "post-merge": "sh hooks/post-merge.sh",
      "post-rewrite": "sh hooks/post-merge.sh"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint:js",
      "git add"
    ],
    "*.scss": [
      "npm run lint:scss",
      "git add"
    ]
  },
  "keywords": [
    "nextjs",
    "boilerplate",
    "typeccript",
    "react",
    "redux",
    "prettier",
    "stylelint",
    "jest",
    "enzyme",
    "svg sprite",
    "husky",
    "lint staged"
  ],
  "author": "Sanjay Twisk",
  "repository": {
    "type": "git",
    "url": "git@github.com:sanjaytwisk/nextjs-ts.git"
  },
  "license": "ISC",
  "dependencies": {
    "next": "^11.1.3",
    "next-compose-plugins": "^2.1.1",
    "next-redux-wrapper": "^2.0.0",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.7",
    "redux-thunk": "^2.3.0",
    "svg-sprite-loader": "^4.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@storybook/addon-actions": "^5.0.5",
    "@storybook/react": "^5.0.5",
    "@zeit/next-sass": "^1.0.1",
    "acorn": "^6.1.1",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-module-resolver": "^3.1.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "eslint": "^5.15.3",
    "eslint-config-esnext": "^4.0.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-react": "^1.1.7",
    "eslint-import-resolver-babel-module": "^5.0.1",
    "eslint-plugin-enzyme": "^0.1.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.1.0",
    "jest-svg-transformer": "^1.0.0",
    "lint-staged": "^8.1.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.7",
    "postcss-preset-env": "^6.4.0",
    "prettier": "^1.15.3",
    "prop-types": "^15.7.2",
    "stylelint": "^9.9.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-scss": "^3.5.4",
    "svgo": "^1.1.1",
    "svgo-loader": "^2.2.0"
  }
}
